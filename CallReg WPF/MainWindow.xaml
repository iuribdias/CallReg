<Window x:Class="CallReg_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CallReg_WPF"
        mc:Ignorable="d"
        Title="CallReg" Height="450" Width="800" Background="Black" FontFamily="Source Sans Pro Light" FontSize="18" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="205*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="98*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF555555" Offset="0"/>
                <GradientStop Color="#FF492626" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="" Margin="724,0,0,0" VerticalAlignment="Top" Width="60" Height="30" Click="Button_Click" Grid.Column="1" HorizontalAlignment="Right">
            <Button.Background>
                <ImageBrush ImageSource="abstract_lines_triangle-512.png"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Right" Margin="0,2,65,0" VerticalAlignment="Top" Width="30" Height="30" Click="Maximize_Click" Grid.Column="1" AutomationProperties.Name="ss">
            <Button.Background>
                <ImageBrush ImageSource="abstract_lines_triangle-512.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
