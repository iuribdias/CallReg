                <SolidColorBrush Color="#FF555555"/>
            </Button.Background>
        </Button>
        <Button Content="" Grid.Column="2" HorizontalAlignment="Left" Margin="305,5,0,0" VerticalAlignment="Top" Width="50" Height="50" Grid.RowSpan="2">
            <Button.Background>
                <ImageBrush ImageSource="settingsa.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
