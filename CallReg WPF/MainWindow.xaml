        <Label x:Name="cellLabel" Content="Celula: " Grid.Column="1" HorizontalAlignment="Left" Margin="8,155,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="124" AutomationProperties.Name="cellLabel"/>
        <TextBox x:Name="cellTextbox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="137,159,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="268" Opacity="0.995" Background="#FF555555" AutomationProperties.Name="cellTextbox"/>
