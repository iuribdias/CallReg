                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label x:Name="situationLabel" Content="Situação: " Grid.Column="2" HorizontalAlignment="Left" Margin="4,25,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="81" AutomationProperties.Name="situationLabel"/>
